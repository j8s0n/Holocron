<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
             xmlns:tools="http://schemas.android.com/tools"
             android:layout_width="match_parent"
             android:layout_height="match_parent"
             tools:context=".ui.display.stats.CharacteristicsFragment"
             android:background="#eeeeee">

  <!-- TODO: Update blank fragment layout -->

  <GridLayout
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:columnCount="6"
    android:rowCount="2"
    android:useDefaultMargins="true"
    android:background="#ffffff">

    <TextView
      android:layout_column="0"
      android:layout_row="0"
      android:text="Agility"
      android:layout_columnWeight="1"
      android:textAppearance="?android:attr/textAppearanceMedium"
      android:paddingLeft="4dp"
      android:background="#ffffff"/>

    <TextView
      android:id="@+id/agility_score"
      android:layout_column="1"
      android:layout_row="0"
      android:text="2"
      android:textAppearance="?android:attr/textAppearanceMedium"
      android:layout_marginRight="6dp"
      android:paddingRight="10dp"
      android:background="#ffffff"/>

    <TextView
      android:layout_column="2"
      android:layout_row="0"
      android:text="Cunning"
      android:layout_columnWeight="1"
      android:textAppearance="?android:attr/textAppearanceMedium"
      android:background="#ffffff"/>

    <TextView
      android:id="@+id/cunning_score"
      android:layout_column="3"
      android:layout_row="0"
      android:text="2"
      android:textAppearance="?android:attr/textAppearanceMedium"
      android:paddingRight="10dp"
      android:background="#ffffff"/>

    <TextView
      android:layout_column="4"
      android:layout_row="0"
      android:text="Presence"
      android:layout_columnWeight="1"
      android:textAppearance="?android:attr/textAppearanceMedium"/>

    <TextView
      android:id="@+id/presence_score"
      android:layout_column="5"
      android:layout_row="0"
      android:text="2"
      android:textAppearance="?android:attr/textAppearanceMedium"
      android:paddingRight="6dp"/>

    <TextView
      android:layout_column="0"
      android:layout_row="1"
      android:text="Brawn"
      android:layout_columnWeight="1"
      android:textAppearance="?android:attr/textAppearanceMedium"
      android:paddingLeft="4dp"
      />

    <TextView
      android:id="@+id/brawn_score"
      android:layout_column="1"
      android:layout_row="1"
      android:text="2"
      android:textAppearance="?android:attr/textAppearanceMedium"
      android:paddingRight="10dp"
      />

    <TextView
      android:layout_column="2"
      android:layout_row="1"
      android:text="Intellect"
      android:layout_columnWeight="1"
      android:textAppearance="?android:attr/textAppearanceMedium"/>

    <TextView
      android:id="@+id/intellect_score"
      android:layout_column="3"
      android:layout_row="1"
      android:text="2"
      android:textAppearance="?android:attr/textAppearanceMedium"
      android:paddingRight="10dp"/>

    <TextView
      android:layout_column="4"
      android:layout_row="1"
      android:text="Willpower"
      android:layout_columnWeight="1"
      android:textAppearance="?android:attr/textAppearanceMedium"/>

    <TextView
      android:id="@+id/willpower_score"
      android:layout_column="5"
      android:layout_row="1"
      android:text="2"
      android:textAppearance="?android:attr/textAppearanceMedium"
      android:paddingRight="6dp"/>

  </GridLayout>
</FrameLayout>
