<?xml version="1.0" encoding="utf-8"?>
<!-- This is the activity for choosing base characteristics. -->
<GridLayout
  xmlns:android="http://schemas.android.com/apk/res/android"
  xmlns:tools="http://schemas.android.com/tools"
  android:layout_width="match_parent"
  android:layout_height="match_parent"
  android:paddingBottom="@dimen/activity_vertical_margin"
  android:paddingLeft="@dimen/activity_horizontal_margin"
  android:paddingRight="@dimen/activity_horizontal_margin"
  android:paddingTop="@dimen/activity_vertical_margin"
  tools:context="org.raincitygamers.holocron.ui.creation.ChooseCharacteristicsActivity">

  <TextView
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_column="0"
    android:layout_row="0"
    android:text="Brawn"
    android:textAppearance="?android:attr/textAppearanceMedium"/>

  <TextView
    android:layout_width="wrap_content"
    android:layout_height="25dp"
    android:layout_column="0"
    android:layout_row="1"
    android:text="Presence"
    android:textAppearance="?android:attr/textAppearanceMedium"/>

  <TextView
    android:layout_width="wrap_content"
    android:layout_height="25dp"
    android:layout_column="0"
    android:layout_row="2"
    android:text="Intellect"
    android:textAppearance="?android:attr/textAppearanceMedium"/>

  <TextView
    android:layout_width="wrap_content"
    android:layout_height="25dp"
    android:layout_column="0"
    android:layout_row="3"
    android:text="Cunning"
    android:textAppearance="?android:attr/textAppearanceMedium"/>

  <TextView
    android:layout_width="wrap_content"
    android:layout_height="25dp"
    android:layout_column="0"
    android:layout_row="4"
    android:text="Agility"
    android:textAppearance="?android:attr/textAppearanceMedium"/>

  <TextView
    android:layout_width="wrap_content"
    android:layout_height="25dp"
    android:layout_column="0"
    android:layout_row="5"
    android:text="Willpower"
    android:textAppearance="?android:attr/textAppearanceMedium"/>

  <Button
    android:id="@+id/done_button"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_column="0"
    android:layout_row="6"
    android:onClick="onDoneClicked"
    android:text="@string/done"/>
</GridLayout>
