<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
                                             xmlns:app="http://schemas.android.com/apk/res-auto"
                                             xmlns:tools="http://schemas.android.com/tools"
                                             android:orientation="vertical"
                                             android:layout_width="match_parent"
                                             android:layout_height="match_parent">

  <TextView
    android:text="Credits"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:textAppearance="?android:attr/textAppearanceLarge"
    android:id="@+id/credits_label"
    android:layout_marginStart="16dp"
    app:layout_constraintLeft_toLeftOf="parent"
    android:layout_marginTop="16dp"
    app:layout_constraintTop_toTopOf="parent"/>

  <EditText
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:inputType="numberSigned"
    android:ems="10"
    android:id="@+id/credits_entry"
    android:layout_marginEnd="16dp"
    android:textAlignment="textEnd"
    app:layout_constraintTop_toTopOf="@+id/credits_label"
    app:layout_constraintBottom_toBottomOf="@+id/credits_label"
    android:text="0"
    android:selectAllOnFocus="true"
    app:layout_constraintVertical_bias="0.47"
    app:layout_constraintRight_toLeftOf="@+id/imageView"
    android:layout_marginRight="8dp"/>

  <ImageView
    android:id="@+id/imageView"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    app:srcCompat="@drawable/ic_credit"
    android:layout_marginRight="8dp"
    app:layout_constraintRight_toRightOf="parent"
    app:layout_constraintBottom_toBottomOf="@+id/credits_entry"
    android:layout_marginBottom="0dp"
    app:layout_constraintTop_toTopOf="@+id/credits_entry"
    android:layout_marginTop="0dp"/>
</android.support.constraint.ConstraintLayout>