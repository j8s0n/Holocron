<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
                                             xmlns:app="http://schemas.android.com/apk/res-auto"
                                             xmlns:tools="http://schemas.android.com/tools"
                                             android:layout_width="match_parent"
                                             android:layout_height="match_parent"
                                             android:useDefaultMargins="true">

  <TextView
    android:id="@+id/skill_name"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:text="Skill Name"
    android:textAppearance="?android:attr/textAppearanceMedium"
    app:layout_constraintLeft_toLeftOf="parent"
    app:layout_constraintTop_toTopOf="parent"
    tools:layout_constraintTop_creator="1"/>

  <TextView
    android:id="@+id/skill_char"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_marginStart="16dp"
    android:text="(Char)"
    android:textAppearance="?android:attr/textAppearanceSmall"
    app:layout_constraintBottom_toBottomOf="@+id/character_selection_name"
    app:layout_constraintLeft_toRightOf="@+id/character_selection_name"
    app:layout_constraintTop_toTopOf="@+id/character_selection_name"/>

  <TextView
    android:id="@+id/skill_rating"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_marginEnd="16dp"
    android:text="Rating"
    android:textAlignment="textEnd"
    android:textAppearance="?android:attr/textAppearanceMedium"
    app:layout_constraintBottom_toBottomOf="@+id/character_selection_name"
    app:layout_constraintRight_toRightOf="parent"
    app:layout_constraintTop_toTopOf="@+id/character_selection_name"/>
</android.support.constraint.ConstraintLayout>
