<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
                                             xmlns:app="http://schemas.android.com/apk/res-auto"
                                             xmlns:tools="http://schemas.android.com/tools"
                                             android:layout_width="match_parent"
                                             android:layout_height="match_parent"
                                             android:useDefaultMargins="true">

  <TextView
    android:id="@+id/skill_name"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:text="Skill Name"
    android:textAppearance="?android:attr/textAppearanceMedium"
    app:layout_constraintLeft_toLeftOf="parent"
    app:layout_constraintTop_toTopOf="parent"
    tools:layout_constraintTop_creator="1"
    android:layout_marginTop="16dp"/>

  <TextView
    android:id="@+id/skill_char"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:text="(Char)"
    android:textAppearance="?android:attr/textAppearanceSmall"
    android:layout_marginStart="16dp"
    app:layout_constraintLeft_toRightOf="@+id/skill_name"
    app:layout_constraintBottom_toBottomOf="@+id/skill_name"
    app:layout_constraintTop_toTopOf="@+id/skill_name"/>

  <TextView
    android:id="@+id/skill_rating"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_marginEnd="8dp"
    android:text="(0)"
    android:textAlignment="textEnd"
    android:textAppearance="?android:attr/textAppearanceMedium"
    app:layout_constraintRight_toRightOf="parent"
    app:layout_constraintBottom_toBottomOf="@+id/skill_name"
    app:layout_constraintTop_toTopOf="@+id/skill_name"/>

  <TextView
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:id="@+id/ability_dice"
    app:layout_constraintBottom_toBottomOf="@+id/skill_rating"
    app:layout_constraintTop_toTopOf="@+id/skill_rating"
    app:layout_constraintRight_toLeftOf="@+id/skill_rating"
    android:layout_marginEnd="8dp"
    android:textAppearance="@android:style/TextAppearance.Material.Medium"
    android:textColor="@android:color/holo_green_dark"
    android:text="⬧⬧"
    android:fontFamily="sans-serif"
    android:textAlignment="textEnd"/>

  <TextView
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:id="@+id/proficiency_dice"
    app:layout_constraintBottom_toBottomOf="@+id/ability_dice"
    app:layout_constraintTop_toTopOf="@+id/ability_dice"
    android:text="⬣⬣"
    app:layout_constraintVertical_bias="0.8"
    app:layout_constraintRight_toLeftOf="@+id/ability_dice"
    android:textAppearance="@android:style/TextAppearance.Material.Medium"
    android:textAlignment="textEnd"
    android:textColor="@android:color/holo_orange_light"/>
</android.support.constraint.ConstraintLayout>
