<?xml version="1.0" encoding="utf-8"?>
<manifest package="org.raincitygamers.holocron"
          xmlns:android="http://schemas.android.com/apk/res/android">

  <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE"/>

  <application
    android:allowBackup="true"
    android:icon="@mipmap/ic_launcher"
    android:label="@string/app_name"
    android:supportsRtl="true"
    android:theme="@style/AppTheme">
    <activity
      android:name=".ui.selection.SelectorActivity"
      android:label="@string/app_name"
      android:theme="@style/AppTheme.NoActionBar">
      <intent-filter>
        <action android:name="android.intent.action.MAIN"/>

        <category android:name="android.intent.category.LAUNCHER"/>
      </intent-filter>
    </activity>
    <activity android:name=".ui.creation.ChooseBasicsActivity">
    </activity>
    <activity android:name=".ui.creation.ChooseCharacteristicsActivity">
    </activity>
    <activity
      android:name=".ui.display.DisplayCharacterActivity"
      android:label="@string/title_activity_display_character"
      android:theme="@style/AppTheme.NoActionBar">
    </activity>
  </application>

</manifest>